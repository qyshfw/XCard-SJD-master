<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zhuce2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RadioGray"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.x.xcard.Zhuce2">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/my_login_account"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/user_mob"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入用户名"
            android:background="@null"
            android:padding="10px"
            android:inputType="textPassword"
            android:layout_marginLeft="6dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/my_login_pass"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/user_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入密码"
            android:background="@null"
            android:padding="10px"
            android:inputType="textPassword"
            android:layout_marginLeft="6dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/my_test_pass"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/user_login_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请确认密码"
            android:background="@null"
            android:padding="10px"
            android:inputType="textPassword"
            android:layout_marginLeft="6dp"
            />

    </LinearLayout>
    <Button
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/zhuce2_btn"
        />
</LinearLayout>
